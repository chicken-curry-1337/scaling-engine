# Backend application
PORT=3000
CORS_ORIGIN=http://localhost:8081
JWT_SECRET=example_jwt_secret
JWT_TTL=7d
BCRYPT_ROUNDS=10

# Database connection used by the backend
DB_HOST=database
DB_PORT=5432
DB_USER=example_db_user
DB_PASSWORD=example_db_password
DB_NAME=example_db_name
DB_SYNC=true

# Frontend networking
FRONTEND_HTTP_PORT=80
FRONTEND_HTTPS_PORT=443

# PostgreSQL container configuration
POSTGRES_USER=example_db_user
POSTGRES_PASSWORD=example_db_password
POSTGRES_DB=example_db_name

# HTTPS/Let's Encrypt configuration for the frontend container
ENABLE_SSL=false
SERVER_NAME=kupipodariday.example.com
LETSENCRYPT_EMAIL=admin@example.com
CERTBOT_RENEW_INTERVAL=43200
LETSENCRYPT_USE_STAGING=false
